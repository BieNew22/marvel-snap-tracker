<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.marvelsnaptracker.controller.game.GameViewController"
      stylesheets="@../styles/game-view.css"
      styleClass="main-container"
      prefHeight="90.0" prefWidth="350.0">
    <BorderPane>
        <center>
            <HBox alignment="CENTER">
                <Label fx:id="mainLabel" styleClass="main-label" text=" Welcome!!">
                    <HBox.margin>
                        <Insets right="10" />
                    </HBox.margin>
                </Label>
                <Button fx:id="expandButton" styleClass="expand-button" text="expand"  />
            </HBox>
        </center>

        <top>
            <HBox fx:id="taskbarContainer" alignment="TOP_RIGHT" />
        </top>
    </BorderPane>
</VBox>
