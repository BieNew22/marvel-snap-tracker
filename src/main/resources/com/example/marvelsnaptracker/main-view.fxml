<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.marvelsnaptracker.controller.MainViewController"
      stylesheets="@styles/main-view.css"
      styleClass="main-container">

    <!-- taskbar   -->
    <BorderPane styleClass="taskbar-container">
        <!-- 화면 전환용 버튼 모음 -->
        <left>
            <HBox BorderPane.alignment="CENTER" alignment="CENTER">

                <VBox styleClass="swap-button-container" alignment="CENTER">
                    <HBox.margin>
                        <Insets left="15" />
                    </HBox.margin>
                    <Button text="MAIN" styleClass="swap-button, now-active" />
                    <VBox styleClass="button-under-line" />
                </VBox>

                <Label text="|" styleClass="split-line"/>

                <Button text="DECK" styleClass="swap-button" />

                <Label text="|" styleClass="split-line"/>

                <Button text="TBC"  styleClass="swap-button" />
            </HBox>
        </left>

        <!-- 창 컨트롤하는 버튼 모은 -->
        <right>
            <HBox BorderPane.alignment="CENTER" alignment="CENTER">
                <Button fx:id="minimizeButton" styleClass="minimize-button, window-button">
                    <HBox.margin>
                        <Insets right="10" />
                    </HBox.margin>
                </Button>
                <Button fx:id="closeButton" styleClass="close-button, window-button">
                    <HBox.margin>
                        <Insets right="10" />
                    </HBox.margin>
                </Button>
            </HBox>
        </right>

    </BorderPane>

    <VBox styleClass="content-container" fx:id="contentBox" spacing="10" />
</VBox>
